<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:text="FROM LOGIN"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unsername"
        android:inputType="textMultiLine"
        android:lines="2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textMultiLine"
        android:lines="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btntlp"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:backgroundTint="#11FF00"
                android:insetLeft="10dp"
                android:onClick="Telepon"
                android:text="TELEPON"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnweb"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:backgroundTint="#00A6FF"
                android:insetLeft="10dp"
                android:onClick="Website"
                android:text="WEBITE"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnmaps"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:backgroundTint="#0037FF"
                android:insetLeft="10dp"
                android:onClick="Maps"
                android:text="MAPS"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnemail"
                android:layout_width="100dp"
                android:layout_height="73dp"
                android:backgroundTint="#FF0000"
                android:insetLeft="10dp"
                android:onClick="Email"
                android:text="EMAIL"
                android:textAlignment="center"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</LinearLayout>